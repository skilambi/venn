# Server Configuration
APP_NAME=ChatServer
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production-use-secrets-module
API_VERSION=v1
PORT=8000

# Database Configuration (Docker)
DATABASE_URL=postgresql+asyncpg://chatuser:chatpass@localhost:5432/chatdb
REDIS_URL=redis://localhost:6379/0

# Snowflake Configuration (Replace with your credentials)
SNOWFLAKE_ACCOUNT=your_account.us-east-1
SNOWFLAKE_USER=readonly_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=SAMPLE_DATA
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=READONLY_ROLE

# LLM Configuration (Replace with your OpenAI key)
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Security
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
WEBSOCKET_RATE_LIMIT=100